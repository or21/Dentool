<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

        <EditText
            android:id="@+id/id"
            android:layout_width="550dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="202dp"
            android:layout_marginRight="180dp"
            android:layout_marginEnd="366dp"
            android:ems="10"
            android:textSize="30sp"
            android:inputType="numberPassword" />

        <EditText
            android:id="@+id/userName"
            android:layout_width="550dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/id"
            android:textSize="30sp"
            android:layout_alignLeft="@+id/id"
            android:layout_alignStart="@+id/id"
            android:layout_marginBottom="55dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/userNameBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/userName"
            android:layout_below="@+id/HeadLine"
            android:layout_marginTop="10dp"
            android:layout_marginRight="145dp"
            android:layout_marginEnd="145dp"
            android:textSize="30sp"
            android:layout_toLeftOf="@+id/userName"
            android:layout_toStartOf="@+id/userName"
            android:text="@string/user_name" />

        <TextView
            android:id="@+id/idBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/id"
            android:textSize="30sp"
            android:layout_alignBottom="@+id/id"
            android:layout_alignLeft="@+id/userNameBox"
            android:layout_alignStart="@+id/userNameBox"
            android:text="@string/id" />

        <TextView
            android:id="@+id/HeadLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/userName"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="100dp"
            android:text="@string/headline"
            android:textColor="#73bc90"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="80sp" />

        <Button
            android:id="@+id/sendInfo"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/idBox"
            android:layout_marginTop="76dp"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/userNameBox"
			android:layout_toEndOf="@+id/userNameBox"
            android:text="@string/Send" />

        <Button
            android:id="@+id/skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/sendInfo"
            android:layout_marginRight="54dp"
            android:layout_marginEnd="54dp"
            android:layout_marginTop="19dp"
            android:text="SKIP" />
        
        <RelativeLayout 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentBottom="true">
            
            <Button
        	    android:id="@+id/test_button"
            	android:layout_width="wrap_content"
 	      	    android:layout_height="wrap_content"
   	        	android:text="TESTER"
   	        	android:onClick="serverTestMethod"/>
        </RelativeLayout>
        

</RelativeLayout>
